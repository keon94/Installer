<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="InterfaceSettings" type="System.Configuration.NameValueSectionHandler" />
    <section name="InstallationSettings" type="System.Configuration.NameValueSectionHandler" />
  </configSections>

  <InterfaceSettings>
    <add key="PerformInstallation" value="Yes"/>  <!-- Yes/No -->
    <add key="Target Application Name" value="FSX"/>
    <add key="License Information" value="License Information:\
             Line2\
             Line3\
             Line4\
         "/>
    <add key="Custom Page1 Message" value=""/>
    <add key="Custom Page2 Message" value=""/>
    <add key="Custom Page3 Message" value=""/>
    <add key="Custom Page5 Message" value=""/>
    <add key="Installing Application Name" value="Russian Airports"/>
    <add key="Target Application Default Directory" value="E:\blah"/>
    <add key="Make Backup" value="Yes"/>  <!-- Yes/No -->
    <add key="Backup Message" value=""/>
    <add key="Backup Default Directory" value="E:\backup"/>
    
  </InterfaceSettings>

  
  <InstallationSettings>
    <!-- Format: [Src Directory (relative to installer path)],[Dest. Directory (relative to target path)];\  -->
    <add key="Copy Files" value="\
             Russian Airports\scenery\.*,scenery_folder;\
             Russian Airports\texture\.*,texture_folder;\
         "/>

    <add key="Copy Folders" value="\
             Russian Airports\scenery\.*,scenery_folder\;\
             Russian Airports\scenery\.*,landclass_folder\;\
         "/>
  </InstallationSettings>  
  
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  
</configuration>
